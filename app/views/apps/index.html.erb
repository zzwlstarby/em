<h1>Listing apps</h1>

<table>
  <tr>
    <th>Key</th>
    <th>Title</th>
    <th>Keywords</th>
    <th>Sites</th>
    <th>Filters</th>
    <th>Blacklist</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @apps.each do |app| %>
  <tr>
    <td><%= app.key %></td>
    <td><%= app.title %></td>
    <td><%= app.keywords %></td>
    <td><%= app.sites %></td>
    <td><%= app.filters %></td>
    <td><%= app.blacklist %></td>
    <td><%= link_to 'Show', app %></td>
    <td><%= link_to 'Edit', edit_app_path(app) %></td>
    <td><%= link_to 'Destroy', app, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

